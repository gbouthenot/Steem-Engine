BCCROOT = C:\Progra~2\Borlan~1
BCBROOT = C:\Progra~2\BCB
###################################################################
.AUTODEPEND

CPP        = $(BCCROOT)\Bin\bcc32
CPP32      = $(BCCROOT)\Bin\cpp32
LIBRARIAN  = $(BCCROOT)\Bin\tlib /P128
LINKER     = $(BCCROOT)\Bin\ilink32
RC         = $(BCCROOT)\Bin\brc32

#    Set the linker options
LINKOPTS = -L$(BCCROOT)\Lib;$(BCCROOT)\Lib\PSDK -aa -Tpe -t -x -w -v-

#    Set the compiler options
CCOPTS = -D_NO_VCL -DWINVER=0x0400 -D_WIN32_WINNT=0x0300
CCOPTS = -w  -O2 -OS -Oi -Ov -Og -O -Oc                  $(CCOPTS)
CCOPTS = -jb -j10 -tWM  -r -a4  -6  -vi -d -ff -fp       $(CCOPTS)
CCOPTS = -v- -x -xf -xp- -xd -xs- -H- -y-                $(CCOPTS)

CPPFLAGS= $(CCOPTS) -I$(BCBROOT)\Include

ALL: urarlib.obj

urarlib.obj: 
           $(CPP) $(CPPFLAGS) -c -ourarlib.obj win_urarlib.c
